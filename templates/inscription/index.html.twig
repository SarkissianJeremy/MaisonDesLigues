{% extends 'base.html.twig' %}

{% block title %}Inscription !{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/cerulean/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if licencie is defined %}
        <div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Nom</label>
                <input type="text" class="form-control" value="{{ licencie.getNom() }}" disabled>
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Prenom</label>
                <input type="text" class="form-control" value="{{ licencie.getPrenom() }}" disabled>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Qualité</label>
                <input type="text" class="form-control" value="{{ licencie.getQualite().getLibellequalite() }}" disabled>
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Numéro Licence</label>
                <input type="text" class="form-control" value="{{ licencie.getNumLicence() }}" disabled>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputCity">Adresse</label>
                <input type="text" class="form-control" value="{{ licencie.getAdresse1() ~ licencie.getAdresse2()  }}" disabled>
              </div>
              <div class="form-group col-md-4">
                <label for="inputState">Ville</label>
                <input type="text" class="form-control" value="{{ licencie.getVille() }}" disabled>
              </div>
              <div class="form-group col-md-2">
                <label for="inputZip">Cp</label>
                <input type="text" class="form-control" value="{{ licencie.getCp() }}" disabled>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="text" class="form-control"  value="{{ licencie.getMail() }}" disabled>
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Tel</label>
                <input type="text" class="form-control"  value="{{ licencie.getTel() }}" disabled>
              </div>
            </div>
        </div> 
              
    {% form_theme mailForm 'bootstrap_5_layout.html.twig' %}
    {{ form_start(mailForm) }}
    
    {{ form_row(mailForm.mail) }}
    <button type="submit" class="btn btn-lg btn-success">Changer Mail</button> 
    
    {{ form_end(mailForm) }}
    {% endif %}
    {% form_theme inscriptionForm 'bootstrap_5_layout.html.twig' %}
    {{ form_start(inscriptionForm) }}
    <hr class="hr" />
        {{ form_row(inscriptionForm.ateliers) }}
        <hr class="hr" />
        {{ form_row(inscriptionForm.Chambres) }}
        <hr class="hr" />
        
        <div class="test">
        {{ form_row(inscriptionForm.Restauration) }}
        </div>
        
        
        <button type="submit" class="btn btn-lg btn-success">Enregistrer</button> 
        <a class="btn btn-lg btn-primary" href="/">
             Accueil
         </a>
        
        
    {{ form_end(inscriptionForm) }}
    
    
    
    
</div>
    
<style>
.form-check {
    float:left;
    display:block;
    margin: 10px;
}
</style>

{% endblock %}


        <h4> {{hotel.nom}}</h4>
        <p> - {{ hotel.adresse1 }}, {{ hotel.cp }},{{ hotel.ville }}</p>
        <p> - {{hotel.tel}}</p>
        <p> - {{ hotel.mail }}</p>
        {% for chambre in chambres %}
            {% if chambre.Hotel.id == hotel.id %}
                <p> * {{chambre.libelle}} : {{ chambre.tarif }} €</p>
            {% endif %}
        {% endfor %}
        </div>
    {% endfor %}
    
